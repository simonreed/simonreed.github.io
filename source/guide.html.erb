---
layout: layout
navigation: guides
---

<% category = find_category(id) %>

<section class="hero">

    <span class="image"><img src="<%= category.header_img %>" width="100%" height="auto"></span>

  </section>

  <section class="title">

    <article>

      <h3><a href="/guides">Guides & Tutorials</a></h3>

      <h1><%= category.title%></h1>

      <span class="image"><img src="<%= category.icon %>" width="300" height="300"></span>

    </article>

  </section>

  <section class="index">

    <article>

      <aside>

        <%= parse_markdown(category.description) %>

      </aside>

      <aside>

        <ol>
          <% category_top_articles(category).each do | article | %>
          <li>
            <div><a href="<%= article.url %>"><%= article.title %></a></div></div>
          </li>
          <% end %>
        </ol>

      </aside>

    </article>

  </section>

  <section class="posts">

    <h2>All Articles in <%= category.title %></h2>

      <% category_articles(category.id).in_groups_of(2,false) do | articles | %>
      <section class="row">
        <% articles.each do | article | %>
        <article>

<!--           <a href="<%= article.url %>">
            <span class="image"><img src="http://placehold.it/430x215" width="430" height="215"></span>
          </a> -->

          <span>

            <h3><a href="<%= article.url %>"><%= article.title %></a></h3>

            <span class="date"><%= formatted_date(article.date) %></span>

            <p><%= article.summary %></p>

            <a href="<%= article.url %>" class="button">Read Article</a>

          </span>

        </article>
        <% end %>
      </section>
      <% end %>

  </section>

  <% if other_category(id) %>
  <section class="guides guides-grey">

    <%= partial 'guide_section', :locals => { :category => other_category(id), :i => 0 } %>

  </section>
  <% end %>